{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ovie",
  "scopeName": "source.ovie",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ovie",
          "begin": "//",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.ovie"
            }
          }
        },
        {
          "name": "comment.block.ovie",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.ovie"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ovie",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ovie",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.ovie",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ovie",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.ovie",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.ovie",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.ovie",
          "match": "\\b0b[01]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ovie",
          "match": "\\b(if|else|for|while|loop|break|continue|return|match)\\b"
        },
        {
          "name": "keyword.declaration.ovie",
          "match": "\\b(fn|struct|enum|trait|impl|mod|use|pub|const|static)\\b"
        },
        {
          "name": "keyword.other.ovie",
          "match": "\\b(mut|ref|move|unsafe|async|await|yield)\\b"
        },
        {
          "name": "keyword.operator.ovie",
          "match": "\\b(and|or|not|in|is)\\b"
        },
        {
          "name": "constant.language.ovie",
          "match": "\\b(true|false|null|none|some)\\b"
        },
        {
          "name": "keyword.other.ovie.seeam",
          "match": "\\bseeAm\\b"
        },
        {
          "name": "keyword.other.ovie.test",
          "match": "\\btest\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ovie",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.ovie"
            }
          }
        },
        {
          "name": "meta.function.definition.ovie",
          "begin": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "1": {
              "name": "keyword.declaration.ovie"
            },
            "2": {
              "name": "entity.name.function.definition.ovie"
            }
          },
          "end": "(?<=\\})|(?=;)",
          "patterns": [
            {
              "include": "#function-parameters"
            },
            {
              "include": "#function-body"
            }
          ]
        }
      ]
    },
    "function-parameters": {
      "name": "meta.function.parameters.ovie",
      "begin": "\\(",
      "end": "\\)",
      "patterns": [
        {
          "name": "variable.parameter.ovie",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "include": "#types"
        },
        {
          "include": "#punctuation"
        }
      ]
    },
    "function-body": {
      "name": "meta.function.body.ovie",
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        {
          "include": "$self"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.ovie",
          "match": "\\b(String|Number|Boolean|Array|Object|Function|Any)\\b"
        },
        {
          "name": "storage.type.custom.ovie",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.ovie",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.ovie",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.ovie",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.ovie",
          "match": "(=|\\+=|-=|\\*=|/=|%=)"
        },
        {
          "name": "keyword.operator.range.ovie",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.access.ovie",
          "match": "\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.ovie",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.ovie",
          "match": ";"
        },
        {
          "name": "punctuation.section.braces.ovie",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.ovie",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.ovie",
          "match": "[()]"
        }
      ]
    }
  }
}